<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Phone Number "
            android:textStyle="bold"
            android:textColor="@color/White"
            android:layout_margin="15dp"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:text="Date Order Placed.."
            android:textColor="@color/White"
            android:textSize="14dp"
            android:gravity="end" />

        <TextView
            android:id="@+id/order_Total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Product Price"
            android:textStyle="bold"
            android:layout_below="@+id/order_date"
            android:textColor="@color/White"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="14dp"/>


        <Button
            android:id="@+id/show_all_order_prods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Ordered Products"
            android:layout_below="@id/order_Total_price"
            android:layout_margin="10dp"
            android:background="@color/White"
            android:textStyle="bold|italic"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"/>


    </RelativeLayout>

</RelativeLayout>