<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.SettingsActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/close_settings_btn"
                    android:text="Close"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/update_settings_btn"
                    android:text="Update"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_change"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/pro"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar_settings"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/change_image_profile_btn"
        android:text="Change Picture"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image_change"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/change_profile_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Full Names..."
        android:layout_below="@id/change_image_profile_btn"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        />


    <EditText
        android:id="@+id/change_profile_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New phone Number..."
        android:layout_below="@id/change_profile_names"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        />


    <EditText
        android:id="@+id/change_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Address..."
        android:layout_below="@id/change_profile_phone_number"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        />
    <Button
        android:id="@+id/set_security_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set security questions"
        android:layout_below="@id/change_address"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/button"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        />



</RelativeLayout>