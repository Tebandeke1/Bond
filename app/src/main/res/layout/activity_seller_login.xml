<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bond.SellerLoginActivity">

    <ImageView
        android:id="@+id/img_seller"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/sign"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/seller_login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Sign in Form"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_below="@id/img_seller"
        android:layout_margin="10dp"
        android:textSize="24dp"
        />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:hint="Email...."
        android:layout_below="@+id/seller_login_text"
        android:textColorHint="@color/colorPrimaryDark"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:id="@+id/seller_Password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/email_login"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/seller_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/seller_Password_login"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:text="Log in"
        />




</RelativeLayout>