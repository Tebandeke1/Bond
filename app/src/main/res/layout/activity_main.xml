<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".Buyer.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="150dp"

        android:text="Choose The Best Price From Various!!"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic"
        />
    <Button
        android:id="@+id/main_join_now_button"
        android:layout_above="@+id/main_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/input_design"
        android:layout_marginRight="25dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:text="Join now "
        />
    <Button
        android:id="@+id/main_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/button"
        android:layout_above="@+id/Text_wants"
        android:layout_marginRight="25dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:text="Already have an account? Log in"
        />

    <TextView
        android:id="@+id/Text_wants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Wants to become a Seller.."
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>